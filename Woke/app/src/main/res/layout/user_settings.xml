<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#c4a28a">

    <TextView
        android:text="User Settings"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:layout_height="0dp"
        android:id="@+id/user_heading"
        android:layout_weight="0.10" />

    <TextView
        android:text="The state I follow is: none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/State"
        android:layout_weight="0.10"
        android:textSize="23sp" />

    <TextView
        android:text="The congress person I follow is: none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Congress_person"
        android:layout_weight="0.17"
        android:textSize="23sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/change_state"
        android:inputType="text"
        android:hint="@string/state" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/change_congress_person"
        android:hint="@string/congress"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_btn"
        android:text="Change Settings"
        android:focusableInTouchMode="true" />

    <TextView
        android:text="Do not put spaces inside entries... parsing will crash :("
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

</LinearLayout>